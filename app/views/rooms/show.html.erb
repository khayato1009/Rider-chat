<div class="chat-room-container">
  <div class="chat-room-header">
    <h1><%= @chat_room.name %></h1>
    <div class="chat-room-members">
      <% @chat_room.users.each do |user| %>
        <span class="chat-room-member"><%= user.username %></span>
      <% end %>
    </div>
  </div>

  <div class="chat-room-messages">
    <% @chat_room.messages.each do |message| %>
      <div class="chat-room-message">
        <span class="message-sender"><%= message.user.username %></span>
        <span class="message-content"><%= message.content %></span>
        <span class="message-timestamp"><%= message.created_at.strftime('%H:%M:%S') %></span>
      </div>
    <% end %>
  </div>

  <div class="chat-room-form">
    <%= form_for [@chat_room, Message.new] do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: "form-control", placeholder: "Type your message here..." %>
      </div>
      <div class="form-group">
        <%= f.submit "Send", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>